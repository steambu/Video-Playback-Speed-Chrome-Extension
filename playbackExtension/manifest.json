{
  "manifest_version": 2,
  "name": "Custom Video Speed Controller",
  "version": "1.0",
  "description": "Control video playback speed on web pages",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Custom Video Speed Controller"
  },
  "permissions": ["activeTab"],
  "icons": {
    "32": "icon.png"
  }
}
